# Environment Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_SERVER=localhost
DB_PORT=1434
DB_NAME=JNJ-PATHFINDER-CONVERSATION
DB_USER=pathfinder_user
DB_PASSWORD=your_secure_password
DB_ENCRYPT=false
DB_TRUST_CERT=true

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production

# SAML SSO Configuration (Optional - for production)
# SAML_ENTRY_POINT=https://your-identity-provider.com/sso/saml
# SAML_CALLBACK_URL=http://localhost:5000/api/auth/saml/callback
# SAML_ISSUER=pathfinder-app
# SAML_CERT=-----BEGIN CERTIFICATE-----\nYOUR_IDP_CERTIFICATE_HERE\n-----END CERTIFICATE-----
# SAML_PRIVATE_CERT=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----

# Manual Testing Mode (set to true to enable manual login)
ENABLE_MANUAL_LOGIN=true

# JWT Configuration (if needed for API tokens)
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760